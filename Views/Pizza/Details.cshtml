@model Pizza

<h1>Details</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Pizza
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Ingredienti
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Prezzo
        </dt>
        <dd class = "col-sm-10">
            @Model.GetPrice()
        </dd>
        <dt class = "col-sm-2">
            Foto
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content(Model.ImageUrl)" width="200" alt="@Model.Name" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
